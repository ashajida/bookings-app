// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model User {
  id         String @id
  sessions Session[]
  name       String
  phone      String     @unique
  email      String     @unique
  password   String
  services   Service[]  // One-to-many relationship with services
  operationTime OperationTime?
  blockedDates BlockedDate?
  categories Category[]
}

model Customer {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  bookings   Booking[]  // One-to-many relationship with bookings
}

model Service {
  id          Int          @id @default(autoincrement())
  serviceName String
  description String?
  price       Decimal
  duration    String
  userId      String
  user       User        @relation(fields: [userId], references: [id]) // Many-to-one relationship with user
  bookings Booking[]
  categoryId Int?
  category Category?  @relation(fields: [categoryId], references: [id])
}

model Category {
  id Int @id @default(autoincrement())
  categoryName String
  services Service[]
  userId String
  user User?  @relation(fields: [userId], references: [id])
}

model OperationTime {
  id          Int          @id @default(autoincrement())
  opening DateTime
  closing DateTime
  user User @relation(fields: [userId], references: [id])
  userId String @unique
}

model BlockedDate {
  id          Int          @id @default(autoincrement())
  date DateTime
  user User @relation(fields: [userId], references: [id])
  userId String @unique
}


model Booking {
  id             Int       @id @default(autoincrement())
  customerId     Int?
  serviceId      Int
  date       DateTime   @default(now())
  customer       Customer?   @relation(fields: [customerId], references: [id]) // Many-to-one relationship with Customer
  service        Service    @relation(fields: [serviceId], references: [id]) // Many-to-one relationship with Service
  status         String?
}